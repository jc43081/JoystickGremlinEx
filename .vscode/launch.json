    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Joystick Gremlin SC",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/joystick_gremlin.py",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceFolder};${env:PYTHONPATH}"}
        },
        {
            "name": "Python: Generate WIX",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/generate_wix.py",
            "args": [ "--folder", "joystick_gremlin", "--version", "13.40.13-sc.2"],
            "cwd": "${workspaceFolder}/dist",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "${workspaceFolder};${env:PYTHONPATH}"}
        }

    ]
}